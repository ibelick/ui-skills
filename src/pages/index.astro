---
import Layout from "../layouts/Layout.astro";
import { skills } from "../data/skills";
import { CopyButton } from "../ui/copy-button";
import CodeBlock from "../ui/code-block.astro";
import { InstallTabs } from "../ui/install-tabs";

const currentYear = new Date().getFullYear();
---

<Layout>
  <div
    class="bg-parchment-50 relative flex min-h-dvh flex-col items-center justify-end px-0 sm:px-4"
  >
    <div
      class="pointer-events-none absolute inset-0 mask-t-from-60% mask-t-to-100% mask-b-from-80% mask-b-to-100%"
      aria-hidden="true"
    >
      <svg class="h-full w-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="small-grid"
            width="10"
            height="10"
            patternUnits="userSpaceOnUse"
          >
            <path
              d="M 10 0 L 0 0 0 10"
              fill="none"
              stroke="#78716c"
              stroke-opacity="0.1"
              stroke-width="0.5"></path>
          </pattern>
          <pattern
            id="grid"
            width="50"
            height="50"
            patternUnits="userSpaceOnUse"
          >
            <rect width="50" height="50" fill="url(#small-grid)"></rect>
            <path
              d="M 50 0 L 0 0 0 50"
              fill="none"
              stroke="#78716c"
              stroke-opacity="0.2"
              stroke-width="1"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"></rect>
      </svg>
    </div>

    <div class="relative mt-20 w-full max-w-3xl sm:px-0">
      <div class="mx-auto flex w-full flex-col gap-16">
        <div class="px-4 sm:px-0">
          <h1 class="text-parchment-900 text-3xl font-medium tracking-tight">
            UI Skills
          </h1>
          <p class="text-parchment-600 mt-3 text-lg">
            Opinionated constraints for building better interfaces with agents.
          </p>
        </div>

        <div>
          <h2
            class="text-parchment-900 mb-3 px-4 text-lg font-medium tracking-tight sm:px-0"
          >
            Installation
          </h2>
          <InstallTabs client:load />
          <p class="text-parchment-500 mt-3 px-4 text-[15px] sm:px-0">
            Support Claude Code, Cursor, OpenCode and more.
          </p>
        </div>

        <div>
          <h2
            class="text-parchment-900 mb-3 px-4 text-lg font-medium tracking-tight sm:px-0"
          >
            Add a skill
          </h2>
          <CodeBlock
            lines={[
              [
                { text: "npx", className: "text-[#953800]" },
                { text: " ui-skills", className: "text-[#0a3069]" },
                { text: " add", className: "text-[#0550ae]" },
                { text: " animating-ui", className: "text-parchment-400" },
              ],
              [
                { text: "npx", className: "text-[#953800]" },
                { text: " ui-skills", className: "text-[#0a3069]" },
                { text: " add", className: "text-[#0550ae]" },
                {
                  text: " fixing-ui-metadata",
                  className: "text-parchment-400",
                },
              ],
              [
                { text: "npx", className: "text-[#953800]" },
                { text: " ui-skills", className: "text-[#0a3069]" },
                { text: " add", className: "text-[#0550ae]" },
                {
                  text: " fixing-accessibility",
                  className: "text-parchment-400",
                },
              ],
            ]}
          />
        </div>

        <div>
          <h2
            class="text-parchment-900 mb-3 px-4 text-lg font-medium tracking-tight sm:px-0"
          >
            Usage
          </h2>
          <div
            class="relative flex items-center justify-between rounded-none border-t border-b border-neutral-200 bg-white py-3.5 pr-4 pl-6 shadow-2xs sm:rounded-[8px] sm:border-none sm:ring-1 sm:ring-black/10"
          >
            <code class="font-mono text-[15px]">
              <span class="text-[#953800]">/ui-skills</span>
              <span class="text-parchment-400"> review src/</span>
            </code>
            <div class="flex items-center gap-1">
              <CopyButton
                content="/ui-skills review src/"
                showText={false}
                className="size-8"
                client:load
              />
            </div>
          </div>
        </div>

        <div>
          <h2
            class="text-parchment-900 mb-3 px-4 text-lg font-medium tracking-tight sm:px-0"
          >
            Skills
          </h2>
          <ul class="flex flex-col gap-2 px-4 sm:px-0">
            {skills.map((skill) => (
              <li>
                <a
                  href={`/skills/${skill.slug}`}
                  class="text-parchment-600 hover:text-parchment-900 text-base font-medium"
                >
                  {skill.label}
                </a>
              </li>
            ))}
          </ul>
        </div>


        <footer
          class="text-parchment-400 flex w-full flex-col items-center justify-center gap-3 px-4 pb-32 text-center text-base font-medium sm:px-0"
        >
          <div class="flex items-center justify-center gap-3">
            <a
              href="https://github.com/ibelick/ui-skills"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-parchment-900"
            >
              GitHub
            </a>
            <span class="text-parchment-200">·</span>
            <a
              href="https://platform.claude.com/docs/en/agents-and-tools/agent-skills/overview?utm_source=ui-skills.com"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-parchment-900"
            >
              Claude Skills
            </a>
            <span class="text-parchment-200">·</span>
            <a href="/llms.txt" class="hover:text-parchment-900"> llms.txt </a>
          </div>
          <span>
            <span>©{currentYear}</span>
            <a
              href="https://interfaceoffice.com"
              target="_blank"
              rel="noopener noreferrer"
              class="text-parchment-400 hover:text-parchment-900"
            >
              Interface Office
            </a>
          </span>
        </footer>
      </div>
    </div>
  </div>
</Layout>
